.site-nav
  width 100%
  .index &
    top -81px
  height 81px
  position relative
  line-height 81px
  background-color color-accent
  a
    text-decoration none
    color color-navtext
    transition color .3s ease
    font-family opens
    text-transform uppercase
    font-size 14px
    @media screen and (max-width: 340px)
      font-size 13px
    &:hover
      color shade(color-accent, 30%)
  ul
    text-align center
    list-inline(9%)
    @media (max-width: 600px)
      list-inline(3%)