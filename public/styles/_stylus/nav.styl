.site-nav
  width 100%
  margin-top -81px
  height 81px
  position relative
  line-height 81px
  background-color color-accent
  a
    text-decoration none
    color color-text
    transition color .5s ease
    font-family opens
    text-transform uppercase
    font-size 14px
    &:hover
      color color-textalt
  ul
    text-align center
    list-inline(9%)
    @media (max-width: 600px)
      list-inline(3%)