mont = 'Montserrat', sans-serif
opens = 'Open Sans', sans-serif
body
  font-family opens
h1,h2,h3,h4,h5
  font-family mont
  font-weight 700
  text-transform uppercase
h1
  font-size 90px
  @media screen and (max-width: 360px)
    font-size 80px
h2
  font-size 72px
  line-height 60px
  @media screen and (max-width: 360px)
    font-size 60px
    line-height 48px
h3
  font-size 48px
  @media screen and (max-width: 360px)
    font-size 40px
h4
  font-size 27px
  text-transform none
  margin-bottom 9px
h5
  font-size 21px
  margin-bottom 40px
  text-transform none
  font-weight 400
p
  line-height 1.5em
  margin-bottom 40px
  &:last-child
    margin-bottom 0
  &.main
    font-size 20px
    margin-bottom 72px

